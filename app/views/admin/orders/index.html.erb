<h2 class="text-center">管理订单列表</h2>

<div class="col-md-6 col-md-offset-3">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>管理订单</th>
        <th>生成时间</th>
        <th>订购者</th>
        <th>订单状态</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td>➜ <%= link_to(order.id, admin_order_path(order) , class: "btn btn-info btn-xs") %></td>
        <td> <%= order.created_at.to_s(:ymd) %> </td>
        <td> <%= order.user.email %></td>
        <td> <%= order.aasm_state %> </td>
      </tr>
      <% end %>

    </tbody>
  </table>
</div>
