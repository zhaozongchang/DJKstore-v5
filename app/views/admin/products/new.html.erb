<h2 class="text-center">新增商品</h2>
<div class="col-md-6 col-md-offset-3">
  <%= simple_form_for [:admin,@product] do |f| %>

  <%= f.input :title, :label => "产品名称", :required => true%>
  <%= f.input :company, :label => "企业名称", :required => true%>
  <%= f.input :description,:label => "产品描述", :required => true %>
  <%= f.input :quantity,:label => "产品数量", :required => true %>
  <%= f.input :price ,:label => "产品价格", :required => true%>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "商品类别", :required => true)%> <br><br>
  <div class="group">
    <%= f.label :avatar,:label => "产品图片" %>
    <%= f.file_field :avatar, :multiple => true, name: "photos[avatar][]" %><br>
  </div>
  <%= f.submit "Submit", data: {disable_with: "Submitting..."}%>
  <% end %>
</div>
