<h2 class="text-center"> 商品列表 </h2>
<div class="col-md-8 col-md-offset-2">
  <div class="pull-right" style="padding-bottom: 20px;">
    <%= link_to(" 管理订单", admin_orders_path, class: "btn btn-primary btn-sm" )%>
    <%= link_to("新增产品", new_admin_product_path, class: "btn btn-primary btn-sm") %>
  </div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th width="100">商品ID</th>
        <th >商品图片</th>
        <th width="220">名称</th>
        <th width="100">价格</th>
        <th width="150">操作选项</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td>
            <%= product.id %>
          </td>
          <td>
            <%= link_to product_path(product) do %>
              <% if product.photos.present? %>
              <%= image_tag(product.photos[0].avatar.thumb.url, class: "thumbnail") %>
              <% else %>
                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
              <% end %>
            <% end %>
          </td>
          <td>
            <%= product.title %>
          </td>
          <td>
            <%= product.price %>
          </td>
          <td>
            <%= link_to("编辑", edit_admin_product_path(product), class: "btn btn-info btn-xs") %>
            <%= link_to("删除", admin_product_path(product),class: "btn btn-danger btn-xs", method: :delete, data: {confirm: "你确定要删除吗"})%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
